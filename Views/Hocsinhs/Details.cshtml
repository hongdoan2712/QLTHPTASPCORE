@model QLTHPT.Models.Hocsinh
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4>
                                <strong>
                                    Chi Tiết
                                </strong>
                            </h4>


                        </div>
                    </div>
                    <div class="sparkline10-graph">
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã
                                        </th>
                                        <th>
                                            Họ&Tên
                                        </th>
                                         <th>
                                            Giới Tính
                                        </th>
                                         <th>
                                            Ngày Sinh
                                        </th>
                                         <th>
                                            Tôn Giáo
                                        </th>
                                         <th>
                                            Dân Tộc
                                        </th>
                                         <th>
                                            Tỉnh Thành
                                        </th>
                                         <th>
                                            Xã/Phường
                                        </th>
                                         <th>
                                            Quận/Huyện
                                        </th>
                                         <th>
                                            Kỹ Luật
                                        </th>
                                         <th>
                                            Khen Thưởng
                                        </th>
                                         <th>
                                            Lớp
                                        </th>
                                         <th>
                                            Khối
                                        </th>

                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.HsMa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HsHoten)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HsGioitinh)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HsNgaysinh)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HsTongiao)
