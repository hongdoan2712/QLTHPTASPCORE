                                            @Html.DisplayFor(model => model.TinhthanhTtMa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.XaphuongXpMa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.QuanhuyenQhMa)
                                        </td>
                                         <td>
                                            @Html.DisplayFor(model => model.KyluatKlMa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.KhenthuongKtMa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.LopLopMa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.KhoiKhoiMa)
                                        </td>

                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    <a href="@Url.Action("Edit", "Hocsinhs", new { id = Model.HsMa})" class="btn btn-custon-rounded-three btn-warning"><i class="fa fa-edit"></i></a> |
    <a href="@Url.Action("Index", "Hocsinhs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
</p>
