@model IEnumerable<QLTHPT.Models.Hocsinh>

@{
    ViewData["Title"] = "Index";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>HỌC SINH</strong></h4>

                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <div id="toolbar">
                                <strong>@Html.ActionLink("Tạo Mới", "Create")</strong>
                            </div>
                            <table id="table" data-resizable="false" data-toggle="table" data-pagination="true" data-search="true" data-cookie="true" data-cookie-id-table="saveId" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead>
                                    <tr>
                                        <th data-width="100px">
                                            Mã
                                        </th>
                                        <th>
                                            Họ&Tên
                                        </th>
                                        <th>
                                            Giới Tính
                                        </th>
                                        <th>
                                            Ngày Sinh
                                        </th>
                                        <th>
                                            Tôn Giáo
                                        </th>
                                        <th>
                                            Dân Tộc
                                        </th>
                                        <th>
                                            Tỉnh/Thành
                                        </th>
                                        <th>
                                            Xã/Phường
                                        </th>
                                        <th>
                                            Quận/Huyện
                                        </th>
                                        <th>
                                            Kỹ Luật
                                        </th>
                                        <th>
                                            Khen Thưởng
                                        </th>
                                        <th>
                                            Lớp
                                        </th>
                                        <th>
                                            Khối
                                        </th>
                                        <th data-width="150px"></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HsMa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HsHoten)
                                            </td>
                                             <td>
                                                @Html.DisplayFor(modelItem => item.HsGioitinh)
                                            </td>
                                             <td>
                                                @Html.DisplayFor(modelItem => item.HsNgaysinh)
                                            </td>
                                             <td>
                                                @Html.DisplayFor(modelItem => item.HsTongiao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DantocDtMaNavigation.DtMa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TinhthanhTtMaNavigation.TtMa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.XaphuongXpMaNavigation.XpMa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.QuanhuyenQhMaNavigation.QhMa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.KyluatKlMaNavigation.KlMa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.KhenthuongKtMaNavigation.KtMa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LopLopMaNavigation.LopMa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.KhoiKhoiMaNavigation.KhoiMa)
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.HsMa" class="btn btn-custon-rounded-three btn-success"><i class="fa fa-info-circle"></i></a> 
                                                <a asp-action="Edit" asp-route-id="@item.HsMa" class="btn btn-custon-rounded-three btn-warning"><i class="fa fa-edit"></i></a> 
                                                <a asp-action="Delete" asp-route-id="@item.HsMa" class="btn btn-custon-rounded-three btn-danger"><i class="fa fa-trash"></i></a>                                           
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>