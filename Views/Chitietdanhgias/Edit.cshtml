@model QLTHPT.Models.Chitietdanhgia

@{
    ViewData["Title"] = "Edit";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>Chỉnh Sửa</strong></h4>

                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CtdgMa" />
                            <div class="form-group" style="text-align: left;">
                                <label asp-for="CtdgMa" class="control-label">Mã</label>
                                <input asp-for="CtdgMa" class="form-control" />
                                <span asp-validation-for="CtdgMa" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="text-align: left;">
                                <label asp-for="CtdgNgaydg" class="control-label">Ngày</label>
                                <input asp-for="CtdgNgaydg" class="form-control" />
                                <span asp-validation-for="CtdgNgaydg" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SodanhgiaSdgMa" class="control-label"></label>
                                <select asp-for="SodanhgiaSdgMa" class="form-control" asp-items="ViewBag.SodanhgiaSdgMa"></select>
                                <span asp-validation-for="SodanhgiaSdgMa" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HocsinhHsMa" class="control-label"></label>
                                <select asp-for="HocsinhHsMa" class="form-control" asp-items="ViewBag.HocsinhHsMa"></select>
                                <span asp-validation-for="HocsinhHsMa" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="text-align: left;">
                                <div style=" padding-left: 15px;">
                                    <input type="submit" value="Lưu" class="btn btn-default" /> |
                                    <a asp-action="Index" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                </div>
                            </div>
                        </form>
                           
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>