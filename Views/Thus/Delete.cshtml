@model QLTHPT.Models.Thu

@{
    ViewData["Title"] = "Delete";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4>
                                <strong>
                                    Xóa
                                </strong>
                            </h4>
                        </div>
                    </div>
                    <h5>Bạn có chắc muốn xóa ?</h5>

                    <div class="sparkline10-graph">
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã
                                        </th>
                                        <th>
                                            Tên
                                        </th>

                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.ThuMa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.ThuTen)
                                        </td>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
     <form asp-action="Delete">
        <input type="hidden" asp-for="ThuMa" />
        <input type="submit" value="Xoá" class="btn btn-default" /> |
        <a asp-action="Index"class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
    </form>
</div>