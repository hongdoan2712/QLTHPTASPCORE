@model QLTHPT.Models.Lop

@{
    ViewData["Title"] = "Create";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>Tạo Mới</strong></h4>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group"  style="text-align: left;">
                            <label asp-for="LopMa" class="control-label">Mã</label>
                            <input asp-for="LopMa" class="form-control" />
                            <span asp-validation-for="LopMa" class="text-danger"></span>
                        </div>
                        <div class="form-group"  style="text-align: left;">
                            <label asp-for="LopTen" class="control-label">Tên</label>
                            <input asp-for="LopTen" class="form-control" />
                            <span asp-validation-for="LopTen" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="text-align: left;">
                            <input type="submit" value="Tạo" class="btn btn-default"/>
                            <a asp-action="Index"class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

