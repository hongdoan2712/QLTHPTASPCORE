@model QLTHPT.Models.Thoikhoabieu

@{
    ViewData["Title"] = "Create";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>Tạo Mới</strong></h4>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group"  style="text-align: left;">
                            <label asp-for="TkbMa" class="control-label">Mã</label>
                            <input asp-for="TkbMa" class="form-control" />
                            <span asp-validation-for="TkbMa" class="text-danger"></span>
                        </div>
                       <div class="form-group" style="text-align: left;">
                            <label asp-for="LopLopMa" class="control-label">Lớp</label>
                            <select asp-for="LopLopMa" class ="form-control" asp-items="ViewBag.LopLopMa"></select>
                        </div>
                        <div class="form-group"  style="text-align: left;">
                            <label asp-for="MonhocMhMa" class="control-label">Môn học</label>
                            <select asp-for="MonhocMhMa" class ="form-control" asp-items="ViewBag.MonhocMhMa"></select>
                        </div>
                        <div class="form-group"  style="text-align: left;">
                            <label asp-for="ThuThuMa" class="control-label">Thứ</label>
                            <select asp-for="ThuThuMa" class ="form-control" asp-items="ViewBag.ThuThuMa"></select>
                        </div>
                        <div class="form-group"  style="text-align: left;">
                            <label asp-for="TiethocThMa" class="control-label">Tiết học</label>
                            <select asp-for="TiethocThMa" class ="form-control" asp-items="ViewBag.TiethocThMa"></select>
                        </div>
                        <div class="form-group"  style="text-align: left;">
                            <label asp-for="CanboCbMa" class="control-label">Cán bộ</label>
                            <select asp-for="CanboCbMa" class ="form-control" asp-items="ViewBag.CanboCbMa"></select>
                        </div>
                        <div class="form-group"  style="text-align: left;">
                            <label asp-for="HockyHkMa" class="control-label">Học kỳ</label>
                            <select asp-for="HockyHkMa" class ="form-control" asp-items="ViewBag.HockyHkMa"></select>
                        </div>
                        <div class="form-group" style="text-align: left;">
                            <input type="submit" value="Tạo" class="btn btn-default"/>
                            <a asp-action="Index"class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

